        <set>
            <if test="name != null and name !=''">
                name= #{name,jdbcType=VARCHAR},
            </if>
            <if test="sex != null">
                sex= #{sex,jdbcType=INTEGER},
            </if>
            <if test="createDate != null">
                create_date= #{create_date,jdbcType=TIMESTAMP},
            </if>
